<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="480.0" prefWidth="644.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.embassyoperations.Visitor.SubmitAdditionalDocumentsController">
   <children>
      <VBox layoutX="81.0" layoutY="8.0" prefHeight="381.0" prefWidth="527.0">
         <children>
            <Label prefHeight="31.0" prefWidth="296.0" text="Submit Additional Documents" />
            <Label prefHeight="36.0" prefWidth="414.0" text="&quot;Please upload the required documents to support your visa application.&quot;">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="50.0" prefWidth="527.0">
               <children>
                  <Label prefHeight="28.0" prefWidth="123.0" text="Application ID :" />
                  <TextField fx:id="applicationIDField" />
               </children>
            </HBox>
            <HBox prefHeight="57.0" prefWidth="527.0">
               <children>
                  <Label prefHeight="29.0" prefWidth="138.0" text="Document Type :" />
                  <ComboBox fx:id="documentTypeComboBox" prefHeight="33.0" prefWidth="210.0" />
               </children>
            </HBox>
            <HBox prefHeight="66.0" prefWidth="527.0">
               <children>
                  <Label prefHeight="31.0" prefWidth="145.0" text="Select File :" />
                  <TextField fx:id="filepathField" prefHeight="34.0" prefWidth="248.0" />
                  <Button fx:id="browseButton" mnemonicParsing="false" prefHeight="35.0" prefWidth="135.0" text="Browse" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelOnAction" prefHeight="25.0" prefWidth="108.0" text="Cancel" />
                  <Button fx:id="submitButton" mnemonicParsing="false" onAction="#submitOnAction" prefHeight="25.0" prefWidth="133.0" text="Submit">
                     <HBox.margin>
                        <Insets left="90.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
