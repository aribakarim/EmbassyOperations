<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="591.0" prefWidth="714.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.embassyoperations.Citizen.EmergencyTravelDocumentController">
   <children>
      <VBox layoutX="19.0" layoutY="20.0" prefHeight="529.0" prefWidth="610.0">
         <children>
            <Label prefHeight="39.0" prefWidth="413.0" text="Request Emargency Travel Document">
               <VBox.margin>
                  <Insets left="50.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="fullNameField" promptText="Full Name" text="Full Name" />
            <TextField fx:id="passportNoField" promptText="Passport Number" />
            <TextField fx:id="idNumberField" promptText="NID/ Birth Registration Number" />
            <TextField fx:id="phoneField" promptText="Contact Phone" />
            <TextField fx:id="emailField" promptText="Contact Email" />
            <TextArea fx:id="addressArea" prefHeight="99.0" prefWidth="538.0" promptText="Last Known Address" />
            <TextArea fx:id="reasonArea" prefHeight="110.0" prefWidth="610.0" promptText="Reason" />
            <ComboBox fx:id="emargencyTypeBox" prefWidth="150.0" promptText="Emargency Type" />
            <DatePicker fx:id="TravelDatePicker" promptText="Inteded Travel Date" />
            <HBox prefHeight="58.0" prefWidth="610.0">
               <children>
                  <Label fx:id="idFileLabel" prefHeight="42.0" prefWidth="185.0" text="Upload ID" />
                  <Button fx:id="uploadIDButton" mnemonicParsing="false" prefHeight="36.0" prefWidth="171.0">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="68.0" prefWidth="610.0">
               <children>
                  <Label fx:id="policeReportLabel" prefHeight="34.0" prefWidth="206.0" text="Upload Police Report" />
                  <Button fx:id="uploadPoliceButton" mnemonicParsing="false" prefHeight="42.0" prefWidth="185.0" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Button fx:id="submitButton" layoutX="595.0" layoutY="557.0" mnemonicParsing="false" onAction="#submitOnAction" prefHeight="36.0" prefWidth="110.0" text="Submit" />
   </children>
</AnchorPane>
