<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="499.0" prefWidth="685.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.embassy_operations_simulation.Citizen.CitizenshipCertificate">
   <children>
      <VBox layoutX="150.0" layoutY="19.0" prefHeight="456.0" prefWidth="356.0">
         <children>
            <Label prefHeight="17.0" prefWidth="313.0" text="Request Citizenship Certificate">
               <font>
                  <Font size="15.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="fullNameField" onAction="#handelFullName" promptText="Full Name (as in Passport)">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="passportNumberField" onAction="#handelPassportNumber" promptText="Passport  Number">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </TextField>
            <DatePicker fx:id="birthDatePicker" onAction="#handelBirthDate" promptText="Date of Birth">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </DatePicker>
            <ComboBox fx:id="certificateTypeBox" onAction="#handelCertificate" prefHeight="25.0" prefWidth="226.0" promptText="Select Certificate Type">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </ComboBox>
            <TextArea fx:id="reasonArea" prefHeight="159.0" prefWidth="356.0" promptText="State the reason for request">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </TextArea>
            <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handelSubmit" prefHeight="25.0" prefWidth="120.0" text="Submit Request">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
