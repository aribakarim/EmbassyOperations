<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="504.0" prefWidth="626.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.embassyoperations.Citizen.DocumentAttestationController">
   <children>
      <VBox layoutX="142.0" layoutY="32.0" prefHeight="410.0" prefWidth="382.0">
         <children>
            <Label prefHeight="30.0" prefWidth="255.0" text="Document Attestation / Verification">
               <VBox.margin>
                  <Insets left="30.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="nameField" promptText="Full Name">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="passportNoField" promptText="Passport Number">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </TextField>
            <ComboBox fx:id="docTypeComboBox" onAction="#docTypeOnAction" prefHeight="46.0" prefWidth="282.0" promptText="Select Document Type">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </ComboBox>
            <Label fx:id="docFileLabel" prefHeight="29.0" prefWidth="191.0" text="Upload Document ">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="uploadDocButton" mnemonicParsing="false" onAction="#uploadDocOnAction" prefHeight="25.0" prefWidth="245.0">
               <VBox.margin>
                  <Insets left="50.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="idFileLabel" prefHeight="22.0" prefWidth="126.0" text="Upload ID Proof">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="uploadIDProofButton" mnemonicParsing="false" onAction="#uploadIDproofOnAction" prefHeight="25.0" prefWidth="252.0">
               <VBox.margin>
                  <Insets left="50.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handlesubmit" text="Submit">
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
